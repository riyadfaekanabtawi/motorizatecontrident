<%= form_for(@store, :html => { :multipart => true, :class => 'form-control third', :style => 'height:600px;'}) do |f| %>   

       <div class="box-body">

  <div class="warningnombre col-xs-12 col-sm-12" hidden>
               	    <span class="col-sm-8 col-xs-3"></span>
               	    <span class="col-sm-4 col-xs-9"><button class="btn btn-default btn-danger btn-block" style="position: absolute; z-index:2; bottom:1px; ">Debes ingresar el nombre</button></span>
                   </div>


<div class="form-group">
                  <label for="exampleInputEmail1">Nombre Sucursal *</label>
                 <%= f.text_field :nombre, class: 'form-control', placeholder: "Nombre Sucursal", :id => 'nombre' %>
                </div>
<div class="form-group">
                  <label for="exampleInputEmail1">Cliente Sucursal *</label>
                 <%= f.text_field :cliente, class: 'form-control', placeholder: "Cliente Sucursal", :id => 'cliente' %>
                </div>

<div class="form-group">
                  <label for="exampleInputEmail1">Razon Social Sucursal *</label>
                 <%= f.text_field :razon_social, class: 'form-control', placeholder: "Razon Social Sucursal", :id => 'razon_social' %>
                </div>

  <div class="warningciudad col-xs-12 col-sm-12" hidden>
               	    <span class="col-sm-8 col-xs-3"></span>
               	    <span class="col-sm-4 col-xs-9"><button class="btn btn-default btn-danger btn-block" style="position: absolute; z-index:2; bottom:1px; ">Debes ingresar la ciudad</button></span>
                   </div>



  <div class="warningestado col-xs-12 col-sm-12" hidden>
               	    <span class="col-sm-8 col-xs-3"></span>
               	    <span class="col-sm-4 col-xs-9"><button class="btn btn-default btn-danger btn-block" style="position: absolute; z-index:2; bottom:1px; ">Debes ingresar el estado</button></span>
                   </div>


  <div class="warningfase col-xs-12 col-sm-12" hidden>
               	    <span class="col-sm-8 col-xs-3"></span>
               	    <span class="col-sm-4 col-xs-9"><button class="btn btn-default btn-danger btn-block" style="position: absolute; z-index:2; bottom:1px; ">Debes ingresar la Fase de la Sucursal</button></span>
                   </div>




<div class="form-group">
                  <label for="exampleInputEmail1">Ciudad Sucursal *</label>
                 <%= f.text_field :ciudad, class: 'form-control', placeholder: "Ciudad Sucursal", :id => 'ciudad' %>
                </div>

<div class="form-group">
                  <label for="exampleInputEmail1">Estado Sucursal *</label>
                 <%= f.text_field :estado, class: 'form-control', placeholder: "Estado Sucursal", :id => 'estado' %>
                </div>

<div class="form-group">
                  <label for="exampleInputEmail1">Fase de Sucursal *</label>
                 <%= f.number_field :fase, class: 'form-control', placeholder: "Fase", :id => 'fase' %>
                </div>



  <div class="warningdireccion col-xs-12 col-sm-12" hidden>
               	    <span class="col-sm-8 col-xs-3"></span>
               	    <span class="col-sm-4 col-xs-9"><button class="btn btn-default btn-danger btn-block" style="position: absolute; z-index:2; bottom:1px; ">Debes ingresar la dirección completa</button></span>
                   </div>


<div class="form-group">
                  <label for="exampleInputEmail1">Dirección Sucursal *</label>
                 <%= f.text_field :direccion, class: 'form-control', placeholder: "Dirección Sucursal", :id => 'direccion' %>
                </div>


  <div class="warningreal_value col-xs-12 col-sm-12" hidden>
               	    <span class="col-sm-8 col-xs-3"></span>
               	    <span class="col-sm-4 col-xs-9"><button class="btn btn-default btn-danger btn-block" style="position: absolute; z-index:2; bottom:1px; ">Debes ingresar la cantidad real de sobres en la urna de la sucursal</button></span>
                   </div>



<div class="form-group">
                  <label for="exampleInputEmail1">Cantidad real de sobres en urna *</label>
                 <%= f.number_field :real_value, class: 'form-control', placeholder: "Cantidad real de sobres", :id => 'real_value' %>
                </div>

<div class="form-group">
                  <label for="exampleInputEmail1">Foto Sucrsal *</label>
                 <%= f.file_field :photo %>
                </div>


<div class="form-group">
<button type="submit" name="submit" class="btn btn-primary">Cargar Sucursal</button>
          
  </div>


  <div class="warningtodos col-xs-12 col-sm-12" hidden>
               	    <span class="col-sm-8 col-xs-3"></span>
               	    <span class="col-sm-4 col-xs-9"><button class="btn btn-default btn-danger btn-block" style="position: absolute; z-index:2; bottom:1px; ">Debes completar todos los campos</button></span>
                   </div>

</div>
<% end %>



